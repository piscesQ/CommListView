<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_ffaa55"
    android:orientation="vertical"
    tools:context="com.app.koreq.commlistview.activity.widget.PsdInputActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码输入框"
        android:textSize="18sp"
        />

    <com.app.koreq.commwidgetlib.PayPwdEditText
        android:id="@+id/et_psd_input"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        app:payBgDrawable="@drawable/bg_radius_8"
        app:payPwdColor="#9999dd"
        app:payPwdLength="6"
        app:payPwdSize="20sp"
        app:paySplitLineColor="#00ffff"
        app:paySplitLineWidth="1px"
        />

    <com.app.koreq.commwidgetlib.PayPwdEditText
        android:id="@+id/et_psd_input_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        app:payPwdColor="#333333"
        app:payPwdLength="6"
        app:payPwdSize="24sp"
        />

</LinearLayout>
