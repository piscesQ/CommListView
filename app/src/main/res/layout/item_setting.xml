<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_more_main_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/setting_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        >

        <ImageView
            android:id="@+id/setting_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/setting_logo"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            tools:text="我是设置项"
            />

        <com.app.koreq.commlib.widget.CircleTextView
            android:id="@+id/setting_bubble"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@id/setting_name"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="18dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="99+"
            />

        <ImageView
            android:id="@+id/setting_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_arrow_right"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/setting_arrow"
            android:layout_toRightOf="@id/setting_bubble"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clipToPadding="false"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                >

                <TextView
                    android:id="@+id/setting_desc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="4dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray_999999"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="文本"
                    />

                <ImageView
                    android:id="@+id/setting_desc_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/setting_desc_text"
                    android:visibility="gone"
                    />


                <ImageView
                    android:id="@+id/setting_desc_red"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginTop="-4dp"
                    android:layout_toRightOf="@id/setting_desc_img"
                    android:background="@drawable/red_point"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/setting_logo"
            android:background="@color/gray_ee"
            />
    </RelativeLayout>


</LinearLayout>