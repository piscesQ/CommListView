<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.koreq.commlistview.activity.widget.PairScrollAct"
    >

    <com.app.koreq.commlib.widget.PairScorllWidget.PairScrollView
        android:id="@+id/pair_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.app.koreq.commlib.widget.PairScorllWidget.CPairFirstListView
            android:id="@+id/pair_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="头部信息"
                android:textSize="18sp"
                />

        </com.app.koreq.commlib.widget.PairScorllWidget.CPairFirstListView>

        <com.app.koreq.commlib.widget.PairScorllWidget.CPairSecondListView
            android:id="@+id/pair_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ListView
                android:id="@+id/pair_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </com.app.koreq.commlib.widget.PairScorllWidget.CPairSecondListView>
    </com.app.koreq.commlib.widget.PairScorllWidget.PairScrollView>

</LinearLayout>
